<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GlobalAttrs">
        <attr name="cornerRadius" format="dimension"/>
        <attr name="backColor" format="color"/>
        <attr name="backColorCenter" format="color"/>
        <attr name="backColorEnd" format="color"/>
        <attr name="strokeColor" format="color"/>
        <attr name="showGradient" format="boolean"/>
        <attr name="strokeWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="MyButton">
        <attr name="cornerRadius"/>
    </declare-styleable>
    <declare-styleable name="MyTextView">
        <attr name="strokeColor"/>
        <attr name="strokeWidth"/>
        <attr name="cornerRadius"/>
        <attr name="showGradient"/>
        <attr name="backColor"/>
        <attr name="backColorCenter"/>
        <attr name="backColorEnd"/>
    </declare-styleable>
    <declare-styleable name="MyEditText">
        <attr name="strokeColor"/>
        <attr name="strokeWidth"/>
        <attr name="cornerRadius"/>
        <attr name="showGradient"/>
        <attr name="backColor"/>
        <attr name="backColorCenter"/>
        <attr name="backColorEnd"/>
    </declare-styleable>
    <declare-styleable name="MyConstraintLayout">
        <attr name="cornerRadius"/>
        <attr name="showGradient"/>
        <attr name="backColor"/>
        <attr name="backColorCenter"/>
        <attr name="backColorEnd"/>
    </declare-styleable>
    <declare-styleable name="MyRelativeLayout">
        <attr name="cornerRadius"/>
        <attr name="showGradient"/>
        <attr name="backColor"/>
        <attr name="backColorCenter"/>
        <attr name="backColorEnd"/>
    </declare-styleable>
    <declare-styleable name="MyLinearLayout">
        <attr name="cornerRadius"/>
        <attr name="showGradient"/>
        <attr name="backColor"/>
        <attr name="backColorCenter"/>
        <attr name="backColorEnd"/>
    </declare-styleable>

</resources>